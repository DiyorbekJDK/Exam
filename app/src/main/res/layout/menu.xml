<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="290dp"
    android:layout_gravity="top"
    android:gravity="center"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/bigRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:orientation="vertical">


                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/redColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/red"
                     />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/yellowColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/yellow"
                    android:button="@color/black" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/greenColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/green"
                    android:button="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/blueColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/blue"
                    android:button="@color/black" />


                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/pinkColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/pink"
                    android:button="@color/black" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/brownColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/brown"
                    android:button="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/tintColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/teal_200"
                    android:button="@color/black" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/grayColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/lime"
                    android:button="@color/black" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/orangeColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/orange"
                    android:button="@color/black" />

                <Button
                    android:id="@+id/setColor"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Set color"
                    android:textAllCaps="false" />

            </LinearLayout>


        </LinearLayout>


    </RadioGroup>


</LinearLayout>